@{
    ViewData["Title"] = "View Quadrants";
}

<!--Bring in the model-->
@model List<TaskModel>


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Time Management Matrix</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        .quadrant {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
        }

        .quadrant-title {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .task {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Time Management Matrix</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="quadrant">
                    <h2 class="quadrant-title">Urgent and Important</h2>
                    <table>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            @if (x.Quadrant == 1) {
                            <tr>
                                <td>@x.TaskName</td>
                                <td>@x.DueDate</td>
                                <td>@x.Category.CategoryName</td>
                         
                                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
                            </tr>
                            }
                        }
                    </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <div class="quadrant">
                    <h2 class="quadrant-title">Not Urgent but Important</h2>
                    <table>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                @if (x.Quadrant == 2)
                                {
                                    <tr>
                                        <td>@x.TaskName</td>
                                        <td>@x.DueDate</td>
                                        <td>@x.Category.CategoryName</td>

                                        <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                        <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="quadrant">
                    <h2 class="quadrant-title">Urgent but Not Important</h2>
                    <table>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                @if (x.Quadrant == 3)
                                {
                                    <tr>
                                        <td>@x.TaskName</td>
                                        <td>@x.DueDate</td>
                                        <td>@x.Category.CategoryName</td>

                                        <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                        <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <div class="quadrant">
                    <h2 class="quadrant-title">Not Urgent and Not Important</h2>
                    <table>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                @if (x.Quadrant == 4)
                                {
                                    <tr>
                                        <td>@x.TaskName</td>
                                        <td>@x.DueDate</td>
                                        <td>@x.Category.CategoryName</td>

                                        <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                        <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                </div>
</div>
        </div>
    </body>
</html>



























